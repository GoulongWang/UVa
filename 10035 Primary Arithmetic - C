#include<stdio.h>
#include<string.h>
#define LEN 11
int cnt = 0, cnt0 = 0;
int Input(char n[]){
	for (int i = 0; i < LEN; i++) n[i] = 0;
	char s[LEN];
	scanf("%s", s);
	if(s[0] == '0') cnt0++;
	for (int i = 0; i < strlen(s); i++) n[i] = s[strlen(s) - i - 1] - '0';
	return 1;
}

void Add(char a[], char b[], char c[]){
    for (int i = 0; i < LEN; i++) c[i] = a[i] + b[i];
    for (int i = 0; i < LEN - 1; i++) { 
      if (c[i] > 9) {
        cnt++;
        c[i + 1]++;
        c[i] -= 10;
      }
    }
}

void Print(char n[]){
	if(cnt == 0) puts("No carry operation.");
	else if (cnt == 1) puts("1 carry operation.");
	else printf("%d carry operations.\n", cnt);
}

int main(){
	char n1[LEN], n2[LEN], n3[LEN];
	while(Input(n1) && Input(n2) && cnt0 != 2){
		Add(n1, n2, n3);
		Print(n3);
		cnt = 0, cnt0 = 0;	
	}
	return 0;
}
